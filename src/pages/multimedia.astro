---
import Layout from '../layouts/Layout.astro';
import { Scan, Download, X, Maximize2, ChevronLeft, ChevronRight } from 'lucide-react';
import fs from 'fs';
import path from 'path';

// LÓGICA DE SERVIDOR
const multimediaDir = path.join(process.cwd(), 'public', 'multimedia');
let images: string[] = [];

try {
    if (fs.existsSync(multimediaDir)) {
        images = fs.readdirSync(multimediaDir)
            .filter((file: string) => /\.(jpg|jpeg|png|webp)$/i.test(file))
            .sort();
    }
} catch (e) {
    console.error("Error leyendo carpeta multimedia:", e);
}
---

<Layout title="Galería Multimedia - PMC250">
    
    {/* 1. FONDO DE PÁGINA (ID page-bg AÑADIDO) */}
    <div id="page-bg" class="fixed inset-0 z-0 bg-pmc-950 transition-opacity duration-500">
        <img src="/multimedia/020.png" alt="" class="absolute inset-0 w-full h-full object-cover opacity-20 transform scale-110" />
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-size-[40px_40px]"></div>
    </div>

    <main id="main-content" class="relative z-10 pt-40 pb-20 transition-all duration-700">
        <div class="container mx-auto px-6 text-center mb-16">
            
            {/* 2. CABECERA (ID main-header AÑADIDO) */}
            <header id="main-header" class="mb-12 text-center transition-opacity duration-500">
                <div class="flex justify-center items-center gap-3 text-pmc-accent font-mono text-[10px] tracking-[0.4em] uppercase mb-4">
                    <Scan size={14} /> Archivo de Fotografía | Unidad 250
                </div>
                <h1 class="text-6xl md:text-8xl font-black text-white uppercase tracking-tighter leading-none">
                    MULTIMEDIA <span class="text-pmc-accent text-outline">.</span>
                </h1>
            </header>

            <div class="flex flex-col items-center gap-2 mb-8">
                <p class="text-[10px] font-mono text-white/30 uppercase tracking-[0.2em]">
                    [ <span class="text-pmc-accent">← / →</span> Foto anterior/siguiente ] • [ <span class="text-pmc-accent">ESC</span> Salir ]
                </p>
                <p class="text-[9px] font-mono text-white/60 uppercase tracking-widest italic">
                    Fotografía cortesía de la <span class="text-white/40">comunidad ❤️</span>
                </p>
            </div>
        </div>

        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {images.length === 0 ? (
                    <div class="col-span-full text-center text-gray-500 py-32 border border-white/10 border-dashed rounded bg-white/5 font-mono">
                        <p class="mb-2">[ ! ] NO SIGNAL DETECTED</p>
                    </div>
                ) : (
                    images.map((img, index) => (
                        <div 
                            class="open-lightbox group relative aspect-video bg-black border border-white/10 overflow-hidden cursor-pointer hover:border-pmc-accent/50 transition-colors duration-300"
                            data-src={`/multimedia/${img}`}
                            data-index={index}
                        >
                            <img 
                                src={`/multimedia/${img}`} 
                                alt={`Intel ${img}`}
                                class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-all duration-500 grayscale group-hover:grayscale-0"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                                <Maximize2 size={30} className="text-pmc-accent" />
                            </div>
                        </div>
                    ))
                )}
            </div>
        </div>
    </main>

    {/* LIGHTBOX (MODO CINE) */}
    <div id="lightbox" class="fixed inset-0 z-9999 bg-black hidden flex-col items-center justify-center opacity-0 transition-all duration-500 overflow-hidden">
        
        <div class="relative z-10 w-full h-full flex items-center justify-center p-4 md:p-20">
            <img 
                id="lightbox-img" 
                src="" 
                class="max-h-full max-w-full object-contain shadow-[0_0_100px_rgba(0,0,0,1)] transition-all duration-500 scale-95 opacity-0" 
            />
        </div>

        <div id="lightbox-hud" class="absolute inset-0 z-20 pointer-events-none p-10 flex flex-col justify-between transition-opacity duration-500 opacity-0">
            <div class="absolute top-10 left-10 w-20 h-20 border-t border-l border-white/20"></div>
            <div class="absolute top-10 right-10 w-20 h-20 border-t border-r border-white/20"></div>
            <div class="absolute bottom-10 left-10 w-20 h-20 border-b border-l border-white/20"></div>
            <div class="absolute bottom-10 right-10 w-20 h-20 border-b border-r border-white/20"></div>

            <div class="flex flex-col">
                <span class="text-pmc-accent font-mono text-xs tracking-[0.3em] uppercase animate-pulse">// PHOTO MODE ACTIVE</span>
                <span id="img-counter" class="text-white/40 font-mono text-[10px] mt-1 tracking-widest font-bold">FILE: 000 / 000</span>
            </div>

            <div class="flex justify-center items-center gap-10 opacity-30">
                <div class="text-[9px] font-mono text-white text-center">
                    <p class="text-pmc-accent uppercase mb-1 font-bold">ISO</p>
                    <p>800</p>
                </div>
                <div class="w-px h-6 bg-white/20"></div>
                <div class="text-[9px] font-mono text-white text-center">
                    <p class="text-pmc-accent uppercase mb-1 font-bold">Exp</p>
                    <p>+0.0</p>
                </div>
                <div class="w-px h-6 bg-white/20"></div>
                <div class="text-[9px] font-mono text-white text-center">
                    <p class="text-pmc-accent uppercase mb-1 font-bold">F-Stop</p>
                    <p>f/2.8</p>
                </div>
            </div>
        </div>

        <div class="absolute inset-0 z-30 pointer-events-none">
            <div class="absolute top-10 right-10 flex gap-4 pointer-events-auto">
                <a id="download-link" href="#" download class="p-3 bg-white/5 border border-white/10 text-white hover:bg-pmc-accent hover:text-pmc-950 transition-all flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest cursor-pointer backdrop-blur-md">
                    <Download size={16} /> <span class="hidden md:inline">Descargar</span>
                </a>
                <button id="close-modal" class="p-3 bg-red-600/20 border border-red-600/40 text-red-500 hover:bg-red-600 hover:text-white transition-all flex items-center gap-2 text-[10px] font-bold uppercase tracking-widest cursor-pointer backdrop-blur-md">
                    <X size={16} /> <span class="hidden md:inline">Cerrar</span>
                </button>
            </div>

            <button id="prev-btn" class="absolute left-4 top-1/2 -translate-y-1/2 p-4 text-white/20 hover:text-pmc-accent transition-all cursor-pointer pointer-events-auto bg-black/20 hover:bg-black/60 rounded-full backdrop-blur-sm">
                <ChevronLeft size={60} strokeWidth={1} />
            </button>

            <button id="next-btn" class="absolute right-4 top-1/2 -translate-y-1/2 p-4 text-white/20 hover:text-pmc-accent transition-all cursor-pointer pointer-events-auto bg-black/20 hover:bg-black/60 rounded-full backdrop-blur-sm">
                <ChevronRight size={60} strokeWidth={1} />
            </button>
        </div>

    </div>

</Layout>

<style>
    @keyframes scanline {
        0% { top: -10%; }
        100% { top: 110%; }
    }
    .animate-scanline {
        animation: scanline 3s linear infinite;
    }
</style>

<script>
    const cards = document.querySelectorAll('.open-lightbox');
    const images = Array.from(cards).map(el => el.getAttribute('data-src'));
    let currentIndex = 0;

    const lightbox = document.getElementById('lightbox');
    const mainContent = document.getElementById('main-content');
    const pageBg = document.getElementById('page-bg'); // AHORA SÍ LO ENCUENTRA
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
    const lightboxHud = document.getElementById('lightbox-hud');
    const downloadLink = document.getElementById('download-link') as HTMLAnchorElement;
    const counter = document.getElementById('img-counter');
    const header = document.getElementById('main-header'); // AHORA SÍ LO ENCUENTRA

    const closeBtn = document.getElementById('close-modal');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');

    function updateLightbox() {
        if (!lightboxImg || !images[currentIndex]) return;
        
        lightboxImg.style.opacity = '0';
        lightboxImg.style.transform = 'scale(0.95)';
        
        setTimeout(() => {
            const currentSrc = images[currentIndex];
            if (currentSrc) {
                lightboxImg.src = currentSrc;
                if (downloadLink) downloadLink.href = currentSrc;
                if (counter) counter.innerText = `FILE: ${(currentIndex + 1).toString().padStart(3, '0')} / ${images.length.toString().padStart(3, '0')}`;
                
                lightboxImg.style.opacity = '1';
                lightboxImg.style.transform = 'scale(1)';
            }
        }, 150);
    }

    function openLightbox(index: number) {
        currentIndex = index;
        updateLightbox();
        
        // Comprobación de seguridad
        if (lightbox && mainContent && lightboxHud) {
            
            if (header) {
                header.style.opacity = '0';
                header.style.pointerEvents = 'none';
            }
            
            mainContent.style.opacity = '0';
            mainContent.style.transform = 'scale(0.98)';
            
            if (pageBg) {
                pageBg.style.opacity = '0';
            }
            
            lightbox.classList.remove('hidden');
            
            setTimeout(() => {
                lightbox.classList.add('opacity-100');
                lightboxHud.style.opacity = '1';
            }, 50);
            
            document.body.style.overflow = 'hidden';
        }
    }

    function closeLightbox() {
        if (lightbox && mainContent && lightboxHud) {
            lightbox.classList.remove('opacity-100');
            lightbox.classList.add('opacity-0');
            if (lightboxImg) lightboxImg.style.transform = 'scale(0.95)';
            lightboxHud.style.opacity = '0';

            setTimeout(() => {
                lightbox.classList.add('hidden');
                
                if (header) {
                    header.style.opacity = '1';
                    header.style.pointerEvents = 'auto';
                }
                
                mainContent.style.opacity = '1';
                mainContent.style.transform = 'scale(1)';
                
                if (pageBg) {
                    pageBg.style.opacity = '1';
                }
            }, 500);
            
            document.body.style.overflow = '';
        }
    }

    cards.forEach((trigger, idx) => {
        trigger.addEventListener('click', () => openLightbox(idx));
    });

    closeBtn?.addEventListener('click', closeLightbox);
    
    prevBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : images.length - 1;
        updateLightbox();
    });

    nextBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        currentIndex = (currentIndex < images.length - 1) ? currentIndex + 1 : 0;
        updateLightbox();
    });

    document.addEventListener('keydown', (e) => {
        if (!lightbox || lightbox.classList.contains('hidden')) return;
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowLeft') prevBtn?.click();
        if (e.key === 'ArrowRight') nextBtn?.click();
    });
</script>