---
import Layout from "../layouts/Layout.astro";
import { ShieldCheck, Lock, ChevronRight } from "lucide-react";
---

<Layout title="Acceso Seguro - PMC250">
    <div class="fixed inset-0 z-0 bg-pmc-950">
        <img
            src="/multimedia/020.png"
            alt=""
            class="absolute inset-0 w-full h-full object-cover opacity-10 grayscale scale-110"
        />
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff02_1px,transparent_1px),linear-gradient(to_bottom,#ffffff02_1px,transparent_1px)] bg-size-[40px_40px]"></div>
    </div>

    <main class="relative z-10 flex items-center justify-center min-h-screen px-6">
        
        <div class="w-full max-w-md">
            {/* Header Tarjeta */}
            <div class="text-center mb-12 animate-in fade-in slide-in-from-bottom-4 duration-700">
                <div class="inline-flex items-center gap-2 text-pmc-accent font-mono text-[10px] tracking-[0.3em] uppercase mb-6 border border-pmc-accent/20 px-4 py-2 rounded-full bg-pmc-accent/5">
                    <Lock size={12} /> Acceso Restringido
                </div>
                <h1 class="text-5xl font-black text-white uppercase tracking-tighter mb-4">
                    LOGIN <span class="text-pmc-accent">.</span>
                </h1>
                <p class="text-white/40 font-light text-sm">
                    Identifícate con tus credenciales de Discord para acceder al panel de operaciones.
                </p>
            </div>

            {/* Tarjeta de Login */}
            <div class="bg-black/40 border border-white/10 backdrop-blur-md p-8 relative group overflow-hidden">
                {/* Decoración esquinas */}
                <div class="absolute top-0 left-0 w-3 h-3 border-t border-l border-white/20 group-hover:border-pmc-accent transition-colors"></div>
                <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-white/20 group-hover:border-pmc-accent transition-colors"></div>
                <div class="absolute bottom-0 left-0 w-3 h-3 border-b border-l border-white/20 group-hover:border-pmc-accent transition-colors"></div>
                <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-white/20 group-hover:border-pmc-accent transition-colors"></div>

                <div class="space-y-6 relative z-10">
                    <div class="flex items-start gap-4 p-4 bg-pmc-accent/5 border border-pmc-accent/20">
                        <ShieldCheck className="text-pmc-accent shrink-0" size={24} />
                        <div>
                            <h3 class="text-white font-bold text-sm uppercase mb-1">Conexión Segura</h3>
                            <p class="text-white/40 text-xs leading-relaxed">
                                Utilizamos autenticación OAuth2 encriptada. No almacenamos tu contraseña de Discord.
                            </p>
                        </div>
                    </div>

<a 
    href="/api/auth/discord"
    class="w-full relative group/btn flex items-center justify-center gap-3 bg-[#5865F2] hover:bg-[#4752C4] text-white py-4 font-bold uppercase tracking-widest transition-all clip-path-slant"
>
    <svg 
        class="w-6 h-6 shrink-0" 
        viewBox="0 0 24 24" 
        fill="currentColor" 
        xmlns="http://www.w3.org/2000/svg"
    >
        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.182 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
    </svg>
    
    Iniciar Sesión
    <ChevronRight className="group-hover/btn:translate-x-1 transition-transform" />
</a>
                </div>
            </div>

            <div class="text-center mt-8">
                <a href="/" class="text-xs font-mono text-white/30 hover:text-white transition-colors">
                    [ Volver al inicio ]
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    .clip-path-slant {
        clip-path: polygon(5% 0, 100% 0, 100% 100%, 0 100%, 0 20%);
    }
</style>